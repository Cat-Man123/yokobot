Screen:
    MDToolbar:
        title: "Yokobot"
        pos_hint: {"top": 1}
        right_action_items: [['github', lambda x: app.open_browser()]]

    MDLabel:
        id: labele
        text: "Discutez avec notre intelligence artificielle."
        halign: "center"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        theme_text_color: "Secondary"

    MDTextField:
        id: message
        halign: "center"
        size_hint: (0.8, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        font_size: 14
        hint_text: "Votre message Ã  YokoBot"

    MDRoundFlatIconButton:
        icon: "send"
        text: "Envoyer"
        pos_hint: {"center_x": 0.7, "center_y": 0.1}
        elevation: 10
        on_release: app.predict()

    MDRoundFlatIconButton:
        icon: "exit"
        text: "Quitter"
        pos_hint: {"center_x": 0.3, "center_y": 0.1}
        elevation: 10
        on_press: app.stop()